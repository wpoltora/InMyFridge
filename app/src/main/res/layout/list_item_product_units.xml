<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/list_item_product_units_image">
    </ImageView>

    <TextView android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="560g" android:textAlignment="center" android:gravity="center"
        android:id="@+id/list_item_product_units_weight">
    </TextView>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_baseline_qr_code_scanner_24">

    </Button>

</LinearLayout>