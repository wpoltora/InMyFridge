<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/list_item_new_recipe_selected_products_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:layout_gravity="center_vertical">
    </TextView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <EditText
        android:id="@+id/list_item_new_recipe_selected_products_amount"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:inputType="number"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp">
    </EditText>
    <Spinner
        android:id="@+id/list_item_new_recipe_selected_products_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/quantity_unit_array"
        android:layout_gravity="center_vertical" />
</LinearLayout>